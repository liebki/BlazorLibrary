<MudDialog Style="min-width: 60%; min-height: 30%">
    <DialogContent>
        <MudTextField @bind-Value="CommentText" Lines=4 InputType="InputType.Text" Label="Leave a comment for the game" />
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="DeleteComment">Delete comment</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="SaveComment">Save comment</MudButton>
    </DialogActions>

</MudDialog>